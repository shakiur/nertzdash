<h1>Nertz Games</h1>
<hr>

<%= form_tag create_game_path, :method => :put, :class => 'form-inline' do %>
  <div class="col-auto form-group">
    <label>Date:</label>
    <input type="date" class="form-control mx-sm-3" name="game[date]" value=<%= Time.zone.today %>>
  </div>

  <div class="col-auto form-group">
    <label>Winning score:</label>
    <input type="text" class="form-control mx-sm-3" placeholder="0 for uncapped game" name="game[winning_score]">
  </div>
  <button type="submit" class="btn btn-success mx-sm-3">Create new game</button>
<% end %>

<br>

<h2>Past Games</h2>
<table class="table table-striped">
  <thead>
    <th>ID</th>
    <th>Date</th>
    <th>Participants</th>
    <th>Rounds</th>
    <th>Winning team</th>
    <th>Winning score</th>
    <th></th>
    <th></th>
  </thead>
  <tbody>
    <% @games.sort_by(&:date).reverse.each do |game| %>
      <tr>
        <td><%= game.id %></td>
        <td><%= game.date.strftime("%m/%d/%Y") %></td>
        <td><%= game.team_names %></td>
        <td><%= game.current_round_number %></td>
        <td><%= game.winning_team&.name %></td>
        <td><%= game.winning_score %></td>
        <td>
          <%= link_to 'More info', game_scores_path(game_id: game.id), class: 'btn btn-sm btn-outline-info' %>
        </td>
        <td>
          <button type="button" class="btn btn-sm btn-outline-danger" data-toggle="modal" data-target=".archive-confirm-modal">
            Archive
          </button>

          <div class="modal fade archive-confirm-modal" tabindex="-1" role="dialog" aria-labelledby="Confirm Archive" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title">
                    Confirm Archive of Game <%= game.id %>?
                  </h5>
                </div>
                <div class="modal-body">
                  <p>
                    Archiving a game means that it would no longer be visible, and its results will not be considered in the overall stats.
                  </p>
                </div>
                <div class="modal-footer">
                  <%= form_tag archive_game_path(game_id: game.id) do %>
                    <button type="submit" class="btn btn-danger">Archive</button>
                  <% end %>
                  <button type="button" class="btn btn-secondary pull-right" data-dismiss="modal">Close</button>
                </div>
              </div>
            </div>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
