<h2><%= title %></h2>

<table class="table table-striped">
  <thead>
    <th>ID</th>
    <th>Date</th>
    <th>Participants</th>
    <th>Place</th>
    <th>Total Score</th>
    <th>Winning score</th>
    <th></th>
  </thead>
  <tbody>
    <% games.each do |game| %>
      <% team_results = game.team_results(@team) %>
      <tr>
        <td><%= game.id %></td>
        <td><%= game.date.strftime("%m/%d/%Y") %></td>
        <td class="small"><%= game.team_names %></td>
        <td><%= team_results[:place].ordinalize %></td>
        <td><%= team_results[:total_score] %></td>
        <td><%= game.winning_score %></td>
        <td>
          <%= link_to game_scores_path(game_id: game.id), class: 'btn btn-sm btn-outline-info' do %>
            <i class="fa fa-info-circle"></i> More info
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
